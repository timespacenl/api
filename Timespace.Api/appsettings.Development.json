{
  "IntegrationTestingMode": true,
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "Serilog": {
    "Using":  [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Mvc.*": "Information",
        "Microsoft.AspNetCore.Routing.*": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=root;Server=localhost;Port=5435;Database=timespace;Include Error Detail=true;"
  },
  "AuthenticationSettings": {
    "RegistrationFlowTimeoutMinutes": 5,
    "LoginFlowTimeoutMinutes" : 5,
    "SessionCookieExpirationDays": 30,
    "SessionCookieName": "timespace.session",
    "ApiKeyHeaderName": "X-Api-Key"
  },
  "UserSettings": {
    "MfaSetupFlowExpirationInMinutes": 5
  },
  "CaptchaSettings": {
    "Secret": "6LeoOQYkAAAAACMIA0HjFJVPigyF0ENEs9QKY-oI"
  }
}
